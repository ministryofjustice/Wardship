@model Wardship.Models.Report

@{
    ViewBag.Title = "Index";
    int pageSize = 20; // Number of items per page
    int currentPage = 1;
    if (ViewBag.CurrentPage != null)
    {
        currentPage = (int)ViewBag.CurrentPage;
    }
    int totalItems = Model.WardshipRecordsList != null ? Model.WardshipRecordsList.Count() : 0;
    int totalPages = (int)Math.Ceiling((double)totalItems / pageSize);
}

@using (Html.BeginForm("Index", "Report", FormMethod.Get, new { autocomplete = "off" }))
{
    @Html.ValidationSummary(true)
    @Html.AntiForgeryToken()

    <fieldset>
        <legend>Report Results</legend>

        <p>Report period: @Model.ReportBegin.ToShortDateString() to @Model.ReportFinal.ToShortDateString()</p>

        <table class="table">
            <thead>
                <tr>
                    <th>Date Issued</th>
                    <th>Wardship Number</th>
                    <th>Child Surname</th>
                    <th>Child Forenames</th>
                    <th>Gender</th>
                    <th>Child Date of Birth</th>
                    <th>Case Type</th>
                    <th>Type</th>
                    <th>Record</th>
                    <th>Judge</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.WardshipRecordsList != null && Model.WardshipRecordsList.Any())
                {
                    foreach (var record in Model.WardshipRecordsList.Skip((currentPage - 1) * pageSize).Take(pageSize))
                    {
                        <tr>
                            <td>@(record.DateOfOS.HasValue ? record.DateOfOS.Value.ToShortDateString() : "")</td>
                            <td>@record.FileNumber</td>
                            <td>@record.ChildSurname</td>
                            <td>@record.ChildForenames</td>
                            <td>@(record.Gender != null ? record.Gender.Detail : "")</td>
                            <td>@(record.ChildDateofBirth.HasValue ? record.ChildDateofBirth.Value.ToShortDateString() : "")</td>
                            <td>@(record.CaseType != null ? record.CaseType.Detail : "")</td>
                            <td>@(record.Type != null ? record.Type.Detail : "")</td>
                            <td>@(record.Record != null ? record.Record.Detail : "")</td>
                            <td>@(record.DistrictJudge != null ? record.DistrictJudge.Name : "")</td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="3">No records found for the specified date range.</td>
                    </tr>
                }
            </tbody>
        </table>

        @{
            int totalItems = Model.WardshipRecordsList != null ? Model.WardshipRecordsList.Count() : 0;
        }

        <p>Total number of records found: @totalItems</p>

        <div class="pagination">
            @if (currentPage > 1)
            {
                <a href="@Url.Action("Index", "Report", new { page = currentPage - 1, beginDate = Model.ReportBegin, endDate = Model.ReportFinal })">&laquo; Previous</a>
            }

            @for (int i = 1; i <= totalPages; i++)
            {
                if (i == currentPage)
                {
                    <span class="current-page">@i</span>
                }
                else
                {
                    <a href="@Url.Action("Index", "Report", new { page = i, beginDate = Model.ReportBegin, endDate = Model.ReportFinal })">@i</a>
                }
            }

            @if (currentPage < totalPages)
            {
                <a href="@Url.Action("Index", "Report", new { page = currentPage + 1, beginDate = Model.ReportBegin, endDate = Model.ReportFinal })">Next &raquo;</a>
            }
        </div>

        <p>
            <input type="submit" value="Send to Excel" class="btn" 
            onclick="window.location.href='@Url.Action("ExportToExcel", "Report", new { beginDate = Model.ReportBegin, endDate = Model.ReportFinal })'; return false;" />
        </p>
        <p>
            <input type="submit" value="Generate Another Report" class="btn" />
        </p>
    </fieldset>
}